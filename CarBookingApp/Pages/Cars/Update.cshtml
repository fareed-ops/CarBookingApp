@page
@model CarBookingApp.Pages.Cars.UpdateModel

@{
    ViewData["Title"] = "Update";
}

<h1>Edit Car</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Car.Id" />
            <div class="form-group">
                <label asp-for="Car.MakeId" class="control-label"></label>

                <select class="form-control" asp-for="Car.MakeId" asp-items="Model.Makes">
                    <option>Select Make</option>
                </select>

                <span asp-validation-for="Car.MakeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Car.Model" class="control-label"></label>
                <input asp-for="Car.Model" class="form-control" />
                <span asp-validation-for="Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Year" class="control-label"></label>
                <input asp-for="Car.Year" class="form-control" />
                <span asp-validation-for="Car.Year" class="text-danger"></span>
            </div>
            <div  class="form-group">
                <button class="btn btn-warning"  type="submit">

                    <i class="fa-solid fa-save"></i>Save
                </button>
                <a class="btn btn-outline-primary" asp-page="./Index">
                    <i class="fa-solid fa-arrow-left"></i>Back to List
                </a>
                @* <input type="submit" value="Save" class="btn btn-warning btn-block" /> *@
            </div>


        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
