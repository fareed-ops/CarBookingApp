  @page "/"
@model CarBookingApp.Pages.Cars.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>

    <a class="btn btn-primary" asp-page="Create"><i class="fa-solid fa-circle-plus"></i>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Make.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Model)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cars)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Make.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>

                    <a class="btn btn-warning" asp-page="./Update" asp-route-id="@item.Id">
                        <i class="fa-solid fa-pen-to-square"></i>Edit
                    </a> |
                    <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.Id">
                        <i class="fa-solid fa-circle-info"></i>Details
                    </a> |

                    <button class="btn btn-danger deleteBtn" data-id="@item.Id">
                        <i class="fa-solid fa-trash"></i>Detete
                    </button>



                    @* <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>

<form id="deleteFrom" asp-page-handler="delete" method="post">
    <input type="hidden" name="carid" id="carid" />
</form>
@section Scripts {
    <script>
        $(function (){
            $('.deleteBtn').click(function (e){
                e.preventDefault(); // prevent default button action
                var btn = $(this);  // store reference to clicked button
                swal({
                    title: "Are you sure ??",
                    text: "Are you sure want to delete?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) => {
                    if(confirm){
                        var id = btn.data('id');
                        $('#carid').val(id);
                        $('#deleteFrom').submit();
                    }
                });
            });
        });
    </script>
}
